<% title 'Deliciously Portugal - Sign up' %>
<!-- ============= CONTENT AREA STARTS HERE ============== -->
<div id="content" class="clearfix">
	<div id="left-area" class="clearfix">
		<h2 class="title">Sign up</h2>


			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>
			
				<p> <%= f.text_field :first_name,  :class=>'required', :placeholder=>"First name"%>	</p>
				<p> <%= f.text_field :last_name,  :class=>'required', :placeholder=>"Last name"%>	</p>
				<p> <%= f.text_field :nickname,  :class=>'required', :placeholder=>"Nick name"%>	</p>
				<p> <%= f.email_field :email,  :class=>'required', :placeholder=>"Email"%>	</p>
				<p> <%= f.password_field :password,  :class=>'required', :placeholder=>"Password"%>	</p>
				<p> <%= f.password_field :password_confirmation,  :class=>'required', :placeholder=>"Password confirmation"%></p>
			
 				<div><%= f.submit "Sign up", :class=>'readmore' %></div>

			<%end%>

		</div><!-- end of left-area -->
		

</div><!-- end of content div -->