<%= stylesheet_link_tag params[:controller] %>
<%= stylesheet_link_tag "instagram.css" %>
<%= stylesheet_link_tag "twitter-styles.css" %>
<%= javascript_include_tag "google.maps.js"  %>
<%= javascript_include_tag params[:controller]  %>
<%= javascript_include_tag "jquery.instagram.js" %>
<%= javascript_include_tag "jquery.slimbox2.js" %>
<%= javascript_include_tag "twitterfeed-search.js" %>
<div class="row">

	<!-- Main Content Section -->
	<!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->

	<div class="large-9 push-3 columns">

		<h2><%= @product.name %> <small><%= @product.region %></small></h2>

		<div> 

			<img src="<%= @product.photo %>" />

		</div>
		<br />
		<br />
		<div class="large-6 columns">
			<h5> Description </h5>
			<span><%= @product.description %> </span>
		</div>
		<div class="large-5 columns">
			<h5>Region</h5>
			<div class="map-canvas" id="map-canvas"></div>
		</div>

		<br />
		<br />

		<div class="row">

			<span class="label"><%= @product.hashtag %> on Instagram</span>
			<div class="instagram-gallery"></div>
		
			<div>
				<p>
					<a href="https://twitter.com/share" class="twitter-share-button" data-url="<%=request.original_url%>" data-via="DeliciouslyPT" data-hashtags="DeliciouslyPT">Tweet</a>
					<div class="fb-like" data-href="<%=request.original_url%>" data-layout="button" data-action="like" data-show-faces="false" data-share="true"></div>
				</p>
			</div>

		</div>

	</div>

	<!-- Nav Sidebar -->
	<!-- This is source ordered to be pulled to the left on larger screens -->
	<div class="large-3 pull-9 columns">
<br/><br/>
		
		<ins class="adsbygoogle products-deliciously-portugal"
		style="display: inline-block"
		data-ad-client="ca-pub-5281126661789169"
		data-ad-slot="3622614122"></ins>     
		<br/>
		<div id="twitter-feed"></div>
		<div class="fb-comments" data-href="<%=request.original_url%>" data-numposts="5" data-width="230"></div>
		  
	</div>

</div>
