<%= javascript_include_tag "product_crowl" %>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/pt_PT/all.js#xfbml=1&appId=146686052186336";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div id="imageDiv">
  <img src=<%= @product.photo %>>
</div>

<a href="http://deliciouslyportugal.com/"><div id="logoProduct">Deliciously Portugal</div></a>

<div id="productBody">
  <div id="productHighlights" class="row">
    <div class="row">
      <div class="large-6 columns">
        <h1><%= @product.name %></h1>
      </div>
      <div class="large-6 columns right">
        <h2><%= @product.region %></h2>
      </div>
    </div>
    <div class="row">
      <div class="large-4 columns">
        <h3><%= @product.category.name %></h3>
      </div>
      <div class="large-4 columns centered">
        <div class="fb-like" data-send="true" data-layout="button_count" data-width="450" data-show-faces="true"></div>
      </div>
      <div class="large-4 columns right">
        <h3 id="hashtag"><%= @product.hashtag %></h3>
      </div>
    </div>
  </div>

  <div id="productDescription" class="row">
    <div class="row">
      <div id="descriptionText" class="large-8 columns">
        <%= @product.description %>
      </div>
      <div class="large-4 columns">
        <iframe width="100%" height="250" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.pt/maps?f=q&amp;source=s_q&amp;hl=pt-PT&amp;geocode=&amp;q=porto&amp;aq=&amp;sll=38.995438,-9.141194&amp;sspn=1.248728,2.469177&amp;ie=UTF8&amp;hq=&amp;hnear=Porto&amp;t=m&amp;z=13&amp;ll=41.156689,-8.623925&amp;output=embed"></iframe><br />
      </div>
    </div>

    <div id="social" class="row">
      <h1><%= @product.hashtag %> on Instagram</h1>
      <div id="instaPics" class="large-8 columns">
      </div>

      <h1 id><%= @product.hashtag %> on Twitter</h1>
      <div id="tweets" class="large-4 columns">
        <% url = "https://twitter.com/search?q=%23" +  @product.hashtag[1..@product.hashtag.size-1] %>
        <a class="twitter-timeline" href=<%=url%> data-widget-id="340725787776925696">Tweets about "<%= @product.hashtag %>"</a>
        <script>function twit(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}
          twit(document,"script","twitter-wjs");</script>
      </div>
    </div>
  </div>
</div>
