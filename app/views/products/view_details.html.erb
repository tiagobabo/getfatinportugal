<%= stylesheet_link_tag "instagram.css" %>
<%= stylesheet_link_tag "twitter-styles.css" %>
<%= javascript_include_tag "products.js" %>
<%= javascript_include_tag "jquery.instagram.js" %>
<%= javascript_include_tag "jquery.slimbox2.js" %>
<%= javascript_include_tag "twitterfeed-search.js" %>
<script async src="http://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>

<script>
    (adsbygoogle = window.adsbygoogle || []).push({});
</script>



<div class="row">

    <!-- Main Content Section -->
    <!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->

    <div class="large-9 push-3 columns">

        <h2><%= @product.name %> <small><%= @product.region %></small></h2>


   
            <div> 
                <img src="<%= @product.photo %>" />
            </div>
            <br />
            <br />
            <div class="large-6 columns">
			<h5> Description </h5>
                <span><%= @product.description %> </span>
            </div>
            <div class="large-5 columns">
			<h5>Region</h5>
                <div id="map-canvas"></div>
            </div>
       

        <br />
        <br />

        <div class="row">

            <span class="label"><%= @product.hashtag %> on Instagram</span>
            <div class="instagram">
            </div>

        </div>

    </div>



    <!-- Nav Sidebar -->
    <!-- This is source ordered to be pulled to the left on larger screens -->
    <div class="large-3 pull-9 columns">
  <div id="twitter-feed"></div>
  <br/>

        <ins class="adsbygoogle products-deliciously-portugal"
            style="display: inline-block"
            data-ad-client="ca-pub-5281126661789169"
            data-ad-slot="3622614122"></ins>

      

    </div>

</div>
