	<meta name="google-site-verification" content="jAojdZ36N4aT9mpI-KlE06vuAJc7sK9rgNXPiqieIIU" />
</head>
<body>
	<!-- ============= HEADER STARTS HERE ============== -->
	<div id="header-wrapper">

		<div id="header">
			<!-- WEBSITE LOGO -->
			<a href="/"><img src="/assets/logo.png" alt="Food Recipes" class="logo" /></a>

		</div><!-- end of header div -->

		<!-- NAVIGATION BAR STARTS HERE -->
		<div id="nav-wrap">
			<div class="inn-nav clearfix">

				<!-- MAIN NAVIGATION STARTS HERE -->
				<ul class="nav">
					<li class="active"><a href="/">Home</a></li>				
					<li><a>Delicious food</a>						
						<ul>
							<li><a href="/products/prods_by_category/starters">Starters</a></li>
							<li><a href="/products/prods_by_category/main-course">Main courses</a></li>
							<li><a href="/products/prods_by_category/drinks">Drinks</a></li>
							<li><a href="/products/prods_by_category/desserts">Desserts</a></li>
						</ul>
					</li>
					<li><%=link_to 'Food of the month', product_path(@product_of_month)%>
						
					</li>
					<li><a>Deliciously you</a>	
						<ul>
							<li><a href="/donate">Donate</a></li>
							<li><a href="/contacts/advertise">Your ad here</a></li>
							<li><a href="/contacts/suggest">Your food here</a></li>
							<li><a href="/contacts/interest">Your restaurant here</a></li>
							<li><a href="/sponsors">Our sponsors</a></li>
							<li><a href="/portuguese">Portuguese near me</a></li>							
						</ul>
					</li>
					<li><a href="/news">News</a></li>										
					<li>
						<a href="/newsletter">Newsletter</a>

					</li>										
					<li><a href="/faq">FAQ</a></li>					
					<li><a href="/contacts/">Contacts</a></li>
					<li><a href="/about">About</a></li>					
				</ul><!-- end of nav ul -->
				<!-- MAIN NAVIGATION ENDS HERE -->

				<!-- SOCIAL NAVIGATION -->
				<ul class="social-nav">
					<li class="twitter"><a href="https://twitter.com/DeliciouslyPT"></a></li>
					<li class="facebook"><a href="https://www.facebook.com/DeliciouslyPortugal"></a></li>
					<li class="instagram"><a href="http://instagram.com/deliciouslypt"></a></li>
					<li class="pinterest"><a href="http://www.pinterest.com/deliciouslypt/boards"></a></li>
					<!-- <li class="flickr"><a href="#"></a></li>
					
					<li class="rss"><a href="#"></a></li>
					-->
				</ul><!-- end of social-nav ul -->
			</div>
		</div><!-- end of nav-wrap -->
		<!-- NAVIGATION BAR ENDS HERE -->

		<span class="w-pet-border"></span>

	</div><!-- end of header-wrapper div -->

	<!-- ============= HEADER ENDS HERE ============== -->
	<div id="container">
		<!-- WEBSITE SEARCH STARTS HERE -->    	
		<div class="top-search clearfix">
			<h3 class="head-pet"><span>Search delicious portuguese food</span></h3>
			<form action="#" id="searchform" method="post">
				<p>
					<input type="text" name="2" id="searchMain"  style="z-index:999;" class="field" value="Search for..." />
					<input type="submit" name="s_submit" id="s-submit" value="" />
				</p>
			</form>
			<p class="statement"><span class="fireRed">Popular searches :</span> <a href="/products/pastel-de-nata">Pastel de nata</a>, <a href="/products/bacalhau-a-bras">Bacalhau à brás</a>, <a href="/products/vinho-do-porto">Vinho do Porto</a>, <a href="/products/alheira-de-mirandela"> Alheira de Mirandela</a></p>
		</div><!-- end of top-search div-->
		<%= yield %>
	</div>
	<div class="w-pet-border"></div>
	<!-- ============= CONTAINER AREA ENDS HERE ============== -->



<!-- ============= BOTTOM AREA STARTS HERE ============== -->
<div id="bottom-wrap">
	<ul id="bottom" class="clearfix">
		<li>
			<div class="about">
				<a href="/">
					<%= image_tag("footer-logo.png", alt: "Footer Logo", class: "footer-logo") %>
				</a>
				<p>	In deliciouslyportugal.com you can find a description in English of the top portuguese food, as well as the places and restaurants in Portugal where you can taste the time of your life.
							<br/><br/>
							<em>		Deliciously Portugal - Portugal. Food. Yumi.</em>
						</p>
				
				<%= render :partial => 'layouts/paypal'%>
				
			</div>
		</li>
		<li>
			<h2>Recent <span>Food</span></h2>
			<ul class="recent-posts">
				<%@products_recent.each do |product|%>
				<li>
					<%=link_to image_tag(product.photo, alt:'Image'), product_path(product), class: 'img-box'%>
					<h5> <%= link_to product.name, product_path(product)%></h5>
						<p><%= product.description.length>100 ? product.description[0..99] +" (...)" : product.description%></p>
				</li>
				<%end%>								
			</ul>
		</li>

		<li>
			<h2>#deliciouslyPT on <span>Twitter</span></h2>
			<div id="twitter_update_list" class="twitter">
			</div>
		</li>

	</ul><!-- end of bottom div -->
</div><!-- end of bottom-wrap div -->
<!-- ============= BOTTOM AREA ENDS HERE ============== -->


