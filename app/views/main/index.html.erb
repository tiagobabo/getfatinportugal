				<h4><%= link_to @product_desserts.name+' //', '/products/prods_by_category/desserts'%></h4>
				<p><%= @product_desserts.description.length>200 ? @product_desserts.description[0..199]  : @product_desserts.description%> <%=link_to '...more' , product_path(@product_desserts)%> </p>
			</li>				

		</ul>

