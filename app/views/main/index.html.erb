<!-- ============= CONTENT AREA STARTS HERE ============== -->
<div id="content">

	<!-- SLIDER STARTS HERE -->
	<div id="slider" class="slider2">
		<div class="most-rated">
			<div class="item">
				<ins class="adsbygoogle googleAds-products-mainpage"
				style="display: inline-block"
				data-ad-client="ca-pub-5281126661789169"
				data-ad-slot="3622614122"></ins>
			</div>
		</div>
		<h2 class="slider-head">
			<%= image_tag("slider-heading.png", alt: "Top3 Recipes of the Day") %>
		</h2>
		<p class="slogan">If food is an experience for you, then you will find it at the Food Recipe</p>
		<div class="slides right-slider">
			<ul>
				<%@products_slider.each do |product| %>
				<li>
					<a href="/products/<%=product.slug%>" class="img-box">
						<%= image_tag(product.photo, alt: "Hotest") %>
					</a>
					<div class="slide-info">
						<h2><a href="/products/<%= product.slug%>"><%=product.name%></a></h2>
						<div class="rating">
							<!--		<span class="on"></span>
							<span class="on"></span>
							<span class="on"></span>
							<span class="on"></span>
							<span class="off"></span>	-->
							<span>Region: <span><%=product.region%></span></span>
						</div> 

						<p><%= product.description.length>200 ? product.description[0..199] +" (...)" : product.description%></p>
						<a href="/products/<%=product.slug%>" class="readmore">Read more</a>
					</div>
				</li>
				<%end%>

			</ul>
			<p class="sliderNav"><span></span></p>
		</div><!-- end of slides -->
	</div><!-- end of Slider div -->
	<!-- SLIDER AREA ENDS HERE -->

