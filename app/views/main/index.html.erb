				<h4><%= link_to @product_drinks.name+' //', '/products/prods_by_category/drinks'%></h4>
				<p><%= @product_drinks.description.length>200 ? @product_drinks.description[0..199]  : @product_drinks.description%> <%=link_to '...more' , product_path(@product_drinks)%> </p>
